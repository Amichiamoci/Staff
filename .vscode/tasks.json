{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start container (Production)",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "-f",
        ".vscode/docker-compose.yml",
        "--profile",
        "prod",
        "up",
        "--build",
        "-d"
      ],
      "problemMatcher": [],
      "presentation": { "reveal": "always" }
    },
    {
      "label": "Start container (Debugging)",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "-f",
        ".vscode/docker-compose.yml",
        "--profile",
        "debug",
        "up",
        "--build",
        "-d"
      ],
      "options": {
        "env": {
          "DEBUG_APP": "1"
        }
      },
      "problemMatcher": [],
      "presentation": { "reveal": "always" }
    },
    {
      "label": "Stop container",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "-f",
        ".vscode/docker-compose.yml",
        "--profile",
        "\"*\"",
        "down"
      ],
      "problemMatcher": [],
      "presentation": { "reveal": "always" }
    },
    {
      "label": "Wait for container",
      "type": "shell",
      "command": "docker-compose -f .vscode/docker-compose.yml --profile \"*\" wait app",
      "problemMatcher": [],
      "presentation": { "reveal": "never" }
    },
    {
      "label": "Debug container and wait",
      "dependsOn": [
        "Start container (Development)",
        "Wait for Container"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
